<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".opengl.OpenGLActivity">

    <Button
        android:layout_margin="16dp"
        android:text="绘制三角形"
        android:onClick="triangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="16dp"
        android:text="绘制Bitmap"
        android:onClick="bitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="16dp"
        android:text="OpenGLES 渲染视频"
        android:onClick="video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="16dp"
        android:text="OpenGLES 渲染多个视频"
        android:onClick="videoMulti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>